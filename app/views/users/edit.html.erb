<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>
<% if @user.errors.any? %>
<h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
  <div class="alert alert-warning">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model:@user, local:true do |f| %>

<div class="name">
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus:true, id:"inputName", placeholder:""%>
</div>

<div class="name">
  <label for="inputImage">introduction</label>
  <%= f.text_field :introduction, autofocus:true, id:"inputName", placeholder:""%>
</div>

<div class="name">
<label for="inputImage">image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
</div>

<div class="name">
  <%= f.submit "Update User", class: "btn btn-secondary" %>
</div>
<% end %>
</div>
</div>
</div>
